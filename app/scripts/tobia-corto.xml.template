<application>
    <name>Tobia Corto Scripting</name>

    <!-- Dependencies -->
    <dependencies>
        <port>/icub/yarprobotinterface</port>
        <port>/iKinGazeCtrl/rpc</port>
    </dependencies>

    <!-- Gaze -->
    <module>
        <name>gaze.lua</name>
        <parameters></parameters>
        <deployer>lua</deployer>
        <node>icub21</node>
        <dependencies>
            <port timeout="10">/iKinGazeCtrl/angles:i</port>
            <port timeout="10">/iKinGazeCtrl/angles:o</port>
        </dependencies>
    </module>

    <!-- Movements -->
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part left_arm</parameters>
        <node>icub21</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part right_arm</parameters>
        <node>icub21</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part torso</parameters>
        <node>icub21</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part head</parameters>
        <node>icub21</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part left_leg</parameters>
        <node>icub21</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part right_leg</parameters>
        <node>icub21</node>
    </module>

    <!-- Breathers -->
    <module>
        <name>iCubBreather</name>
        <parameters>--name iCubBreatherHead --part head</parameters>
        <node>icub21</node>
    </module>

    <module>
        <name>iCubBreather</name>
        <parameters>--name iCubBreatherLeft --part left_arm</parameters>
        <node>icub21</node>
    </module>

    <module>
        <name>iCubBreather</name>
        <parameters>--name iCubBreatherRight --part right_arm</parameters>
        <node>icub21</node>
    </module>

    <!-- Connections -->
    <connection>
        <from>/gaze/tx</from>
        <to>/iKinGazeCtrl/angles:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/iKinGazeCtrl/angles:o</from>
        <to>/gaze/rx</to>
        <protocol>tcp</protocol>
    </connection>
</application>
